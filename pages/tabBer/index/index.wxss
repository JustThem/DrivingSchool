page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  /* line-height: 1.6; */
  width: 100%;
  
}
.boss{
  height: 95vh;
  padding-top: 10px;
}
.backgroud{
  height: 45vh;
  width: 95%;
  margin: 0px auto;
}
.swiper{
  height: 100%;
  border-radius: 40px;
}
.swiper-item{
  display: block;
  height: 45vh;
  width: 95%;
  border-radius: 40px;
 
}
.swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 40px;
}
.cat{
  /* position: absolute; */
  /* top: 30vh; */
  /* left: calc((100% - 90%0) / 2); */
  width: 95%;
  margin: 0 auto;
  margin-top: 10px;
  background-color: #fff;
  border-radius: 15px;
  padding: 10px 0; 
  margin-bottom: 20px;
  /* height: 200px; */
}
.item{
  width: 95%;
  height: 55px;
  margin: 0px auto;
  margin-top: 10px;
  position: relative;
  /* background-color:#fff; */
  /* border-radius: 15px; */
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
  /* box-shadow: 0px 0px 5px 0px #333; */
  /* padding: 0 5px; */
}
.item-one image{
  width: 38px;
  height: 38px;
  margin-left: 5px;
  margin-right: 20px;
  border-radius: 5px;
}
.item-two view{
  color: #999;
  font-size: 12px;
}
.item-two view:nth-of-type(1){
  font-size: 15px;
  font-weight: 700;
  margin-bottom: 5px;
  color: #333;
}
.item-three{
  position: absolute;
  right: 0px;
  /* top: calc((100% - 12px) / 2); */
  color: #999;
  font-size: 12px;
}
.item-three image{
  width: 14px;
  height: 15px;
  position: absolute;
  right: 5px;
  top: calc((100% - 15px) / 2);
}



